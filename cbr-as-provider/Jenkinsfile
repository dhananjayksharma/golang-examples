pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'pwd && ls -ltr'
                sh 'cd cbr-as-provider && ls -ltr'
                echo 'Step Build 1'
                sh 'make build'
                echo 'Step Build 2'
                sh 'ls -ltr'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing completed!'
            } 
        }
        stage('Run') {
            steps {
                echo 'Step Run'
                // sh 'cd cbr-as-provider && ls -ltr'
                sh 'ls -ltr cbr-as-provider'
                // sh './cbr-as-provider/bin/cbr-as-provider/cbr-as-provider ${PARAM1}'
                sh 'pwd'

            }
        }
        stage('Completed') {
            steps {
               echo 'Task completed!'
            }
        }
    }
}